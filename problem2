
var flatten = function(a, deep,r){
  if(!r){ r = []}
   
if (deep) {
  return r.concat.apply(a,r);
  }
      
   for(var i=0; i<a.length; i++){
        if(a[i].constructor == Array){
            flatten(a[i],deep,r);
          
        }else{
            r.push(a[i]);
        }
    }
  
    return r;
}


console.log(flatten([1,2,[3,4,[5,6],7,[8,9]]]));

